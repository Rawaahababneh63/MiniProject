@model  IEnumerable < MiniProject.Models.Cart_Item>

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Cart</h2>

<br />
<div class="container">
    <h2>Shopping Cart</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content(item.Product.Image_Url)" alt="product" style="width: 150px; height : 200px" />
                        @item.Product.Name
                    </td>
                    <td>
                        <div class="input-group">
                            @Html.ActionLink("-", "UpdateQuantity", new { id = item.ID, quantity = item.Quantity - 1 }, new { @class = "btn btn-outline-secondary" })
                            <input type="text" class="form-control text-center" value="@item.Quantity" readonly />
                            @Html.ActionLink("+", "UpdateQuantity", new { id = item.ID, quantity = item.Quantity + 1 }, new { @class = "btn btn-outline-secondary" })

                        </div>
                    </td>
                    <td>€ @item.Product.Price</td>
                    <td>€ @(item.Product.Price * item.Quantity)</td>
                    <td>@Html.ActionLink("Remove", "Remove", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="check">
        <a href="@Url.Action("Shop", "Products")" class="btn btn-primary">Back to shop</a>
        <a href="@Url.Action("Shop", "Products")" class="btn btn-primary">CHECKOUT</a>
    </div>

</div>

<br />
<br />
<br />

<style>
    .check {
        display: flex;
        justify-content: space-around;
    }
</style>