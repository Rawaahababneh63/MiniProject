@model MiniProject.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2 class="mt-4 mb-4 text-center">Category Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Category Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ImgUrlCat)
                </dt>
                <dd class="col-sm-9">
                    <img src="@Model.ImgUrlCat" alt="@Model.Name" class="img-fluid" style="max-width: 200px;" />
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2" })
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        background-color: #ffffff;
    }

    .card-title {
        font-size: 1.5rem;
        margin-bottom: 20px;
        font-weight: bold;
        color: #333;
    }

    .card-footer {
        background-color: #f8f9fa;
        border-top: 1px solid #e9ecef;
        padding: 15px;
    }

    .btn {
        border-radius: 5px;
        padding: 10px 20px;
        font-weight: bold;
    }

    .img-fluid {
        border: 1px solid #ddd;
        padding: 5px;
        border-radius: 5px;
        background-color: #f8f9fa;
    }

    dl.row dt {
        font-weight: bold;
        color: #555;
    }

    dl.row dd {
        margin-bottom: 10px;
    }
</style>
